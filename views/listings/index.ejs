<% layout("/layouts/boilerplate") %> 


<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4 ">
<!-- Loop through each listing in the 'allListings' array -->
    <% for(let listing of allListings) { %>
        
       <!-- Link to the individual listing page -->
        <a href="/listings/<%=listing._id %>" class="listing-link ">
        <div class="card col listing-card mx-md-0" >
            <img src="<%=listing.image.url%>" 
            class="card-img-top"
             alt="listing_image"
             style="height: 20rem;"
            />
             <div class="card-img-overlay"></div>
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b><br /><br />
                    <%= listing.price.toLocaleString("en-IN") %>/night
                   
                </p>
            </div>
        </div>
    </a>
      <% } %>
</div>

 
     